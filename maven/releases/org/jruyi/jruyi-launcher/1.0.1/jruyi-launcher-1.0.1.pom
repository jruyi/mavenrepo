<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.jruyi</groupId>
	<artifactId>jruyi-launcher</artifactId>
	<version>1.0.1</version>

	<name>JRuyi Launcher</name>
	<description>The executable running JRuyi as a standalone application</description>
	<url>http://www.jruyi.org/</url>
	<organization>
		<name>JRuyi.org</name>
		<url>http://www.jruyi.org/</url>
	</organization>
	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:https://github.com/jruyi/jruyi.git</connection>
		<url>scm:git:https://github.com/jruyi/jruyi.git</url>
		<developerConnection>scm:git:https://github.com/jruyi/jruyi.git</developerConnection>
	</scm>

	<repositories>
		<repository>
			<id>jruyi-repo</id>
			<url>http://repo.jruyi.org/maven/releases</url>
		</repository>
		<repository>
			<id>jruyi-snapshot-repo</id>
			<url>http://repo.jruyi.org/maven/snapshots</url>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>jruyi-repo</id>
			<url>http://repo.jruyi.org/maven/releases</url>
		</repository>
		<snapshotRepository>
			<id>jruyi-snapshot-repo</id>
			<url>http://repo.jruyi.org/maven/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<dependencies>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>4.3.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>jruyi-api</artifactId>
			<version>1.0.0</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<addMavenDescriptor>false</addMavenDescriptor>
						<manifest>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<mainClass>org.jruyi.launcher.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
